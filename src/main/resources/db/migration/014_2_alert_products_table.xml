<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="014_alert_products_table" author="azakaryan">
        <addColumn tableName="products">
            <column name="favoriteItem" type="BIGINT"/>
            <column name="cartItem" type="BIGINT"/>
        </addColumn>

        <addForeignKeyConstraint
                baseTableName="products"
                baseColumnNames="favoriteItem"
                referencedTableName="favorites"
                referencedColumnNames="id"
                constraintName="fk_products_favoriteItem"/>
        <addForeignKeyConstraint
                baseTableName="products"
                baseColumnNames="cartItem"
                referencedTableName="cart_items"
                referencedColumnNames="id"
                constraintName="fk_products_cartItem"/>
    </changeSet>
</databaseChangeLog>
